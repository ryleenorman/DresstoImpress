@page

@using DresstoImpressAPI2.Entities;
@using Microsoft.AspNetCore.Mvc;
@using System.ComponentModel.DataAnnotations;
@model DresstoImpress.Pages.WeatherModel;
@{
    var WeatherID = HttpContext.Request.Query["WeatherID"];
    var weatherType = HttpContext.Request.Query["weatherType"];
    var temperature = HttpContext.Request.Query["temperature"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: "Times New Roman", Times, serif;
        }

        .hero-image {
            background-image: url("Weather1.jpg");
            height: 50vh;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
        }

        .hero-text {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: black;
        }

            .hero-text h1 {
                font-size: 50px;
            }

            .hero-text p {
                font-size: 20px;
                margin-bottom: 20px;
            }

            .hero-text button {
                border: none;
                outline: 0;
                display: inline-block;
                padding: 10px 25px;
                color: white;
                background-color: black;
                text-align: center;
                cursor: pointer;
                font-size: 18px;
            }

                .hero-text button:hover {
                    background-color: #555;
                }

        hr.solid {
            border-top: 3px solid black;
        }

        .hero-image2 {
            background-image: url("Weather2.jpg");
