<form id="occasionForm">
    <input type="number" id="outfitId" name="outfitId" placeholder="Enter Outfit ID" required />
    <button type="button" id="submitBtn">Get Occasion</button>
</form>


<script>
    document.getElementById('submitBtn').addEventListener('click', function () {
        const outfitId = document.getElementById('outfitId').value;
        const outfitPageUrl = `/Outfit?outfitId=${outfitId}`;
        window.location.href = outfitPageUrl;
    });
</script>








