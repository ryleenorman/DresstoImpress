@page

@using DresstoImpressAPI2.Entities;
@using Microsoft.AspNetCore.Mvc;
@using System.ComponentModel.DataAnnotations;
@model DresstoImpress.Pages.WeatherModel;
@{
    var WeatherID = HttpContext.Request.Query["WeatherID"];
    var weatherType = HttpContext.Request.Query["weatherType"];
    var temperature = HttpContext.Request.Query["temperature"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>

    <div class="header">
        <h1>Weather Forecast</h1>
    </div>

    <div class="row">
        <div class="columnForOR">
            <h2>Don't Get Caught In The Rain</h2>
            <p>Check your forecast for this week</p>
            <a href="https://weather.com/" class="button">Check Weather</a>
        </div>
    </div>


    <form id="WeatherTypeForm" action="/Weather">
        <input type="number" id="WeatherID" label="WeatherID"/>
        <input type="button" id="submitBtn" value="Find Weather Type" onclick="GetWeatherByType(document.getElementById('WeatherID').value)" class="button" />
    </form>
    <div id="results"></div>
    <script type="module">GetWeatherByType()</script>

    <div id="weatherType"></div>
    <div id="Weather"></div>

    <form id="TemperatureForm" action="/Weather">
        <input type="number" id="WeatherId" label="WeatherId" />
        <input type="button" id="submitBtn2" value="Find Temperature" onclick="GetTemperature(document.getElementById('WeatherId').value)" class="button" />
    </form>
    <div id="results2"></div>
    <script type="module">GetTemperature()</script>

    <div id="temperature"></div>
    <div id="WeatherTemperature"></div>


</body>
</html>